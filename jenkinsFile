pipeline {
    agent any 
    tools
   {
    maven 'Maven'
    jdk 'JDK8'
   }
   
   
   stages{
   
        stage('Test') { 
            steps {
			    checkout scm
		
		}}
		
		
	stage("make snapshot" ){
	steps{
	script {
                    if (env.BRANCH_NAME == 'master') {
                        
			echo "test master"
			commit= $GIT_COMMIT
			echo "commit"
			
                    } else {
                        echo "test feature"
                    }
        }
        }}
	stage("make artifact in master case"){
	script {
                    if (env.BRANCH_NAME == 'master') {
                        
			echo "commit"
			bat "git checkout ${env.commit}"
			echo "deploy the artifcat"
			
                    } else {
                        echo "is good"
                    }
        
        }
	
	}
	
	
	
	
	
    }
}
